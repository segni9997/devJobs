generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  type        JobType
  salary      String?
  description String
  requirements String
  benefits    String?
  contactEmail String
  companyWebsite String?
  isRemote    Boolean  @default(false)
  postedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("jobs")
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
  INTERNSHIP
}